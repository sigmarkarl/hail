server {
    server_name @domain@ www.* site.*;

    location = /healthcheck {
      return 204;
    }

    location / {
        proxy_pass http://site/;
        include /etc/nginx/proxy.conf;
    }

    listen 80 default_server;
    listen [::]:80 default_server;
}

